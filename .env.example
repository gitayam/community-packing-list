# Google Cloud Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1
SERVICE_NAME=community-packing-list
IMAGE_TAG=latest

# Database Configuration (Local Development)
DB_NAME=packinglist_dev
DB_USER=packinglist_user
DB_PASS=supersecretpassword
DB_HOST=db
DB_PORT=5432
DB_PORT_HOST=5433

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=community_packing_list.settings

# Cloud Production Configuration
# DATABASE_URL=postgres://user:password@host:port/database (for cloud deployment)
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 .run.app .appspot.com
CSRF_TRUSTED_ORIGINS=https://*.run.app https://*.appspot.com

# Docker Configuration
WEB_PORT=8000
WEB_COMMAND=python manage.py runserver 0.0.0.0:8000
NODE_ENV=development

# Superuser Creation (Optional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Build Configuration
BUILD_TARGET=production

# Custom Domain (optional)
# CUSTOM_DOMAIN=your-custom-domain.com 