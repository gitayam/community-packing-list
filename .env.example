# Django Settings
# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=False

# Space-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 yourdomain.com

# Database Configuration
# For SQLite (development)
DB_ENGINE=django.db.backends.sqlite3

# For PostgreSQL (production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=community_packing_list
# DB_USER=postgres
# DB_PASS=your-password-here
# DB_HOST=localhost
# DB_PORT=5432

# CSRF Settings (space-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000 http://127.0.0.1:8000 https://yourdomain.com

# Static Files (for production)
# STATIC_ROOT=/path/to/static/files

# Media Files (if needed in future)
# MEDIA_ROOT=/path/to/media/files
# MEDIA_URL=/media/

# Email Configuration (if needed)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (for production)
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Sentry (for error tracking in production)
# SENTRY_DSN=your-sentry-dsn-here

# Redis (for caching/sessions if needed)
# REDIS_URL=redis://localhost:6379/0

# Google Maps API (for store location features)
# GOOGLE_MAPS_API_KEY=your-api-key-here

# Rate Limiting
# RATELIMIT_ENABLE=True
# RATELIMIT_USE_CACHE=default