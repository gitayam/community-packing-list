# Google Cloud Run / Cloud SQL / GCS Example Environment

# Django
DJANGO_SETTINGS_MODULE=community_packing_list.settings_gcp
SECRET_KEY=your-production-secret-key
DEBUG=False
ALLOWED_HOSTS=*

# Database (Cloud SQL Postgres)
DB_NAME=packinglist_dev
DB_USER=packinglist_user
DB_PASS=your-db-password
DB_HOST=/cloudsql/demo1-462602:us-central1:packinglist-sql
DB_PORT=5432

# Google Cloud Storage
USE_GCS=true
GS_BUCKET_NAME=your-gcs-bucket-name
GS_PROJECT_ID=demo1-462602
GS_LOCATION=static

# Static/Media URLs (auto-set by settings_gcp.py)
# STATIC_URL=https://storage.googleapis.com/your-gcs-bucket-name/static/
# MEDIA_URL=https://storage.googleapis.com/your-gcs-bucket-name/media/

# Cloud Run
PORT=8000

