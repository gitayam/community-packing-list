# Django Settings
SECRET_KEY=your_super_secret_key_please_change_me
DEBUG=1
ALLOWED_HOSTS_PROD=yourdomain.com,www.yourdomain.com # e.g., localhost,127.0.0.1,your_actual_domain.com (used when DEBUG=0)

# Database Settings (PostgreSQL)
DB_NAME=packerdb
DB_USER=packeruser
DB_PASSWORD=supersecretpackerpassword # Please change this password
DB_HOST=db
DB_PORT=5432

# Docker Compose Port Mappings (optional: if you want to change the host ports)
# These are the ports on your local machine that map to the container ports.
# The container ports (8000 for web, 5432 for db) are generally fixed unless you change Dockerfile/Postgres config.
WEB_APP_HOST_PORT=8000
DB_HOST_PORT=5432

# Superuser credentials
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=adminpassword
DJANGO_SUPERUSER_EMAIL=admin@example.com
